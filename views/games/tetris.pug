extends ../layout

block content
  link(rel="stylesheet", href="/stylesheets/games/tetris.css", type="text/css")

  div#div1
    div#div2
      canvas#tetris-canvas.canvas(width='520' height='600')
      div#div3
        label(for='level-input') Start level:
        input#level-input(name='level-input' type='number' min='0' max='19' value='5')
        button#start-stop-btn Play/Pause
        button#quit-btn Quit

  script(src='/javascripts/games/tetris/classic-tetris.js')
  script(src='/javascripts/games/tetris/index.js')
