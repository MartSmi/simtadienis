          img.gameIcon.rouletteImage(src='/images/game-map/rulete.svg', alt="Roulette" data-roulette)
      .gameContainer.slotsContainer
        a(href='/games/slots')
          img.gameIcon.slotsImage(src='/images/game-map/slots.svg', alt="Slots" data-slots)
      .gameContainer.blackjackContainer
        a(href='/games/blackjack')
          img.gameIcon.blackjackImage(src='/images/game-map/blackjack.svg', alt="Blackjack" data-blackjack)
      .gameContainer.bankContainer
