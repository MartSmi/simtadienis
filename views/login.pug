extends layout

block content
  main.container.pt-4
    .row.justify-content-center
      .col-10.col-md-7.col-lg-5
        h1.h2.mb-4 Šimtadienio bankas

        if failure
          .alert.alert-danger
            | Įvyko techninė klaida.
        if badcreds
          .alert.alert-danger
            | Neteisingas vartotojo vardas/ID arba slaptažodis.
        if logout
          .alert.alert-success
            | Sėkmingai atsijungta.

        form(method='post')
          .form-group
            label(for='username') Vartotojo vardas/ID
            input#username.form-control(type='text' name='username' required)
          .form-group
            label(for='password') Slaptažodis
            input#password.form-control(type='password' name='password' required)
          button.btn.btn-primary(type='submit') Prisijungti
